@model IEnumerable<NUProjectDemo.Models.Products>
@{
    ViewData["Title"] = "Poducts List";
}
<h2>Poducts List</h2>
<a asp-action="Create">Add New Product</a>
<a asp-action="PrintAll">Print All</a>
<table class="table">
    <thead>
        <tr>
            <th>Id Products</th>
            <th>@Html.DisplayNameFor(model=>model.productname)</th>
            <th>@Html.DisplayNameFor(model=>model.category)</th>
            <th>@Html.DisplayNameFor(model=>model.price)</th>
            <th>@Html.DisplayNameFor(model=>model.datetimeadded)</th>
            @*<th>@Html.DisplayNameFor(model=>model.description)</th>*@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem=>item.idproducts)</td>
                <td>@Html.DisplayFor(modelitem=>item.productname)</td>
                <td>@Html.DisplayFor(modelitem=>item.category)</td>
                <td>@Html.DisplayFor(modelitem=>item.price)</td>
                <td>@Html.DisplayFor(modelitem=>item.datetimeadded)</td>
                @*<td>@Html.DisplayFor(modelitem=>item.description)</td>*@
                <th>
                    <a asp-action="Edit" asp-route-id="@item.idproducts">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.idproducts">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.idproducts">Delete</a>
                    <a asp-action="PrintId" asp-route-id="@item.idproducts">Print</a>
                </th>
            </tr>
        }
    </tbody>
</table>