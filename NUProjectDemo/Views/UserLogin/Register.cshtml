@model NUProjectDemo.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>
    Register
</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Signup">
            <div asp-validation-summary=ModelOnly class="text-danger"></div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div asp-validation-summary=ModelOnly class="text-danger"></div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input type="password" asp-for="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div asp-validation-summary=ModelOnly class="text-danger"></div>
            <div class="form-group">
                <label asp-for="lastname" class="control-label"></label>
                <input type="text" asp-for="lastname" class="form-control" placeholder="Enter lastname" />
                <span asp-validation-for="lastname" class="text-danger"></span>
            </div>
            <div asp-validation-summary=ModelOnly class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstname" class="control-label"></label>
                <input type="text" asp-for="firstname" class="form-control" placeholder="Enter firstname" />
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>
            <div asp-validation-summary=ModelOnly class="text-danger"></div>
            <div class="form-group">
                <label asp-for="course" class="control-label"></label>
                <select name="course" class="form-control">
                    <option value="BSIT">BSIT</option>
                    <option value="BSCS">BSCS</option>
                </select>
                
                <span asp-validation-for="course" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary"/>
            </div>
        </form>
    </div>
    

    
</div>